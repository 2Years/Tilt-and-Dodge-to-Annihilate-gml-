        ini_write_real("Setting","main_spd",global.main_spd)
        ini_close()
        room_goto(rm_setting_tiltadj);
    }
    else if(selected_item==3){
        global.main_spd=get_integer("Set an integer from 5 to 50",global.main_spd);
        ini_open("data.ini")
        ini_write_real("Setting","main_spd",global.main_spd)
        ini_close()
        room_goto(rm_setting_tiltadj);
    }
